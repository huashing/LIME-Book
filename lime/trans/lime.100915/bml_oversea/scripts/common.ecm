function encodeURIComponent(str) {
  var ret = '';

  for(var i = 0, strLen = str.length, code; i < strLen; i++) {
    code = str.charCodeAt(i);

    if (isNonEscapeCharCode(code)) {
      ret += str.charAt(i);
    } else if (code <= 0xff) {
      ret += '%'+code.toString(16);
    } else {
      // do not encode multibyte character code
/*      code = code.toString(16);
      if (code.length % 2) code = '0'+code;

      code = code.split('');
      for(var j = 0, len = code.length; j < len; j += 2) {
        ret += '%'+code[j]+code[j+1];
      }*/
    }
      
  }
  return(ret);
}

function decodeURIComponent(str) {
  var ret = '';

  var tmp = str.split('');
  for(var i = 0, strLen = tmp.length, code; i < strLen;) {
    code = tmp[i++];
    if (code == '%') {
      // this implementation can not handle multibyte character code
      ret += String.fromCharCode(parseInt(tmp[i++]+tmp[i++], 16));
    } else {
      ret += code;
    }
  }
  return(ret);
}

function getCurrentPath() {
  var uri = browser.getActiveDocument();

  uri = uri.split('?')[0];
  var pos = uri.lastIndexOf('/');
  if (pos >= 0) uri = uri.substring(0, pos+1);

  return((uri.indexOf('http') != 0) ? HTTP_ROOT_PATH+uri : uri);
}

function createUri(uri, key, val) {
  if (isUndefined(key)) return(uri);
  
  return(uri+(((uri || '').split('?').length <= 1) ? '?' : '&')+
         encodeURIComponent(key)+'='+encodeURIComponent(val));
}

function Arguments() {}
function parseArguments(uri) {
  var tmp = (uri || '').split('?');
  var arg = new Arguments();

  if (tmp.length <= 1) return(arg);
  tmp = tmp[1].split('&');
  for(var i = 0; i < tmp.length; i++) {
    var buf = tmp[i].split('=');
    arg[decodeURIComponent(buf[0])] = decodeURIComponent(buf[1]);
  }
  return(arg);
}

