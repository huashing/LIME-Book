function truncate(string, length) {
  string = string || '';
  length = length || 32;

  // needs refactoring ->
  for(var i = 0, len = 0, strLen = string.length; i < strLen; i++) {
    len += (string.charCodeAt(i) <= 0xff) ? 1 : 2;
    if (len - length > 0) return(string.substring(0, i)+'¡Ä');
  }
  // <- needs refactoring
  return(string);
}

function multiByteLength(string) {
  string = string || '';

  var len = 0;
  for(var i = 0; i < string.length; i++) {
    len += (string.charCodeAt(i) < 256) ? 1 : 2;
  }
  return(len);
}

function multiByteSubstring(string, start, end) {
  string = string || '';
  start  = start  ||  0;
  end    = end    || -1;

  var sIdx = -1, eIdx = -1;
  for(var i = 0, len = 0; i < string.length; i++) {
    len += (string.charCodeAt(i) < 256) ? 1 : 2;
    if ((sIdx < 0) && (start < len)) {
      sIdx = i;
      if (end < 0) break;
    }
    if ((sIdx >= 0) && (end < len)) {
      eIdx = i;
      break;
    }
  }
  return((eIdx >= 0) ? string.substring(sIdx, eIdx) : string.substring(sIdx));
}

